package bit.basic.obj1;

public class SuperMain {

	public static void main(String[] args) {
		SuperClass sp=new SuperClass();
//		SubClass1 sc1=new SubClass1();//SubClass1( Object( )  )
		
//		SubClass2 sc2=new SubClass2();  //SubClass2(  SuperClass( Object( )  )  )
//      SubClass3 sc3=new SubClass3();
//		SubClass2 sc2=(SubClass2)new SuperClass(); // SuperClass( Object( )  ) 
//		sc2.actionProces();
		
		SuperClass sp1 = new SubClass1();
		SuperClass sp2 = new SubClass2();
		SuperClass sp3 = new SubClass3();
		
		doSubNoMe(sp1);
		
//		sp1.actionProcess();
		sp1.printSubClass1(2);
//		sp1 = (SubClass1)sp1;
//		sp1.printSubClass1();
		SubClass1 sb1 = (SubClass1)sp1;
		sb1.printSubClass1(0);
		
		
	}
	public static void doSubNoMe(SuperClass sp) {
		if(sp instanceof SubClass1) {
			System.out.println("yes");
			((SubClass1) sp).sub1Me();
		}else if(sp instanceof SubClass2) {
			System.out.println("sub2 class");
			((SubClass2) sp).sub2Me();
		}else if(sp instanceof SubClass3) {
			System.out.println("sub3 class");
			((SubClass3) sp).sub3Me();
		}
	}
}

package bit.basic.obj1;

import java.util.Arrays;

public class ObjectEx3 {
	// 오늘생일여부, 성별, 지역, 띠, 나이평균, 나이별정렬, 성씨별 인원수
	
	String[] member = {"장영주#940207-2111111#051)518-1043",
			"장영#920207-2000000#051)518-3333",
			"장주#900207-2122222#051)518-2222",
			"영주#911212-2133311#051)518-1111",
			"장영주주#920321-2222211#051)518-1000"	};
	// 나이
	public int[] getAges() {
		int[] ages = new int[member.length];
		for(int i=0; i<member.length; i++) {
			String jumin = member[i].split("#")[2];
			int front = Integer.parseInt(jumin.substring(0, 2));
			int back = Integer.parseInt(jumin.split("-")[1].substring(0, 1));
			System.out.println(jumin + "F : " + front + " : " + back);
			if(back==1 || back==2) {
				ages[i] = 123-front + 1;
			}else {
				ages[i] = 23-front + 1;
			}
		}
		return ages;
	}
	// 이름
	public String[] getNames() {
		String[] names = new String[member.length];
		for(int i=0; i<member.length; i++) {
			names[i] = member[i].split("#")[0];
		}
		return names;
	}
	public static void main(String[] args) {
		ObjectEx3 o = new ObjectEx3();
		System.out.println(Arrays.toString(o.getNames()));
		System.out.println(Arrays.toString(o.getAges()));
	}
}
